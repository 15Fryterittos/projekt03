<%- include("head_partial.ejs") %>

<div style="text-align:center; margin-top:2rem;">
  <a href="/fish" class="back-btn">← Powrót do listy gatunków</a>
</div>

<main>
  <h1><%= title %></h1>

  <ul class="fish-list">
    <% species.fishes.forEach(function(fish){ %>
      <li class="fish-item">
        <strong><%= fish.name %></strong><br/>
        <small><%= fish.description %></small><br/>
        <em>Środowisko: <%= fish.habitat %></em>

        <form
          action="/fish/<%= species.id %>/delete/<%= fish.id %>"
          method="POST"
          onsubmit="return confirm('Na pewno chcesz usunąć tę rybę?');"
          style="display:inline"
        >
          <button type="submit" class="delete-btn">Usuń</button>
        </form>
      </li>
    <% }) %>
  </ul>

  <div class="new-fish-form">
    <h3>Dodaj nową rybę</h3>
    <%- include("forms/new_fish.ejs") %>
  </div>
</main>

<%- include("foot_partial.ejs") %>